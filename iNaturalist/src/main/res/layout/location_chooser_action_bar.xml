<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="70dp"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/place_guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Name"
            android:maxLines="1"
            android:textSize="18sp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/coordinates"
            android:layout_below="@id/place_guess"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:alignItems="stretch"
            app:alignContent="stretch"
            >
            <TextView
                android:id="@+id/latitude"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="12.34567890123"
                android:textSize="12sp"
                android:textColor="#929292"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:maxWidth="80dp"
                android:ellipsize="end"
                android:lines="1"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=", "
                android:textSize="12sp"
                android:textColor="#929292"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                />
            <TextView
                android:id="@+id/longitude"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="#929292"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:text="12.34567890123"
                android:maxWidth="80dp"
                android:ellipsize="end"
                android:lines="1"
                />
            <TextView
                android:id="@+id/accuracy_prefix"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/coordinates_acc"
                android:textSize="12sp"
                android:textColor="#929292"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                />
            <TextView
                android:id="@+id/accuracy"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="#929292"
                android:text="34567890123"
                android:maxWidth="80dp"
                android:ellipsize="end"
                android:lines="1"
                />
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:id="@+id/geoprivacy"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/geoprivacy_with_value"
            android:layout_below="@id/coordinates"
            android:textSize="12sp"
            android:textColor="#929292"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            />
    </RelativeLayout>
</RelativeLayout>