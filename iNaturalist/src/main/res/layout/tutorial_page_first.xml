<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:background="#EFEFEF"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/tutorial_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/app_title"
        android:src="@drawable/slide_logo" />

    <TextView
        android:id="@+id/tutorial_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contribute"
        android:textSize="30sp"
        android:textColor="#FF4A4A4A"
        android:layout_marginBottom="14dp"
        />

    <TextView
        android:id="@+id/tutorial_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore and Connect with Nature"
        android:layout_below="@id/tutorial_image"
        android:textSize="17sp"
        android:textColor="#FF4A4A4A"
        android:layout_marginTop="28dp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/secondary_tutorial_image"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutorial_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:scaleType="fitStart"
        android:contentDescription="@string/california_academy_of_sciences_and_national_geographic"
        android:src="@drawable/slide_branding" />
</RelativeLayout>
